    <!-- –§–û–†–ú–ê –¶–ë–û –ó –î–ï–†–ï–í–û–ú –î–û–ß–Ü–†–ù–Ü–• -->
    <record id="view_responsibility_center_tree_form" model="ir.ui.view">
        <field name="name">budget.responsibility.center.tree.form</field>
        <field name="model">budget.responsibility.center</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="–ù–∞–∑–≤–∞ –¶–ë–û..."/>
                        </h1>
                    </div>

                    <!-- –û–°–ù–û–í–ù–ê –Ü–ù–§–û–†–ú–ê–¶–Ü–Ø -->
                    <group>
                        <group string="–û—Å–Ω–æ–≤–Ω—ñ –¥–∞–Ω—ñ">
                            <field name="code"/>
                            <field name="cbo_type"/>
                            <field name="budget_level"/>
                            <field name="parent_id" options="{'no_create': True}"/>
                            <field name="sequence"/>
                        </group>

                        <group string="–í—ñ–¥–ø–æ–≤—ñ–¥–∞–ª—å–Ω—ñ">
                            <field name="responsible_user_id"/>
                            <field name="approver_user_id"/>
                            <field name="region"/>
                            <field name="business_segment"/>
                        </group>
                    </group>

                    <!-- –î–û–ß–Ü–†–ù–Ü –¶–ë–û -->
                    <notebook>
                        <page string="–°—Ç—Ä—É–∫—Ç—É—Ä–∞ –ø—ñ–¥—Ä–æ–∑–¥—ñ–ª—ñ–≤" name="children">
                            <field name="child_ids" widget="one2many_list">
                                <tree string="–î–æ—á—ñ—Ä–Ω—ñ –¶–ë–û" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="cbo_type"/>
                                    <field name="budget_level"/>
                                    <field name="responsible_user_id" widget="many2one_avatar_user"/>

                                    <button name="%(action_budget_plan)d" string="üìä"
                                            type="action" class="btn-link"
                                            context="{'search_default_cbo_id': id}"
                                            title="–ë—é–¥–∂–µ—Ç–∏"/>
                                </tree>
                            </field>
                        </page>

                        <page string="–ü–æ–≤'—è–∑–∞–Ω—ñ –ø—ñ–¥–ø—Ä–∏—î–º—Å—Ç–≤–∞" name="companies">
                            <field name="company_ids"/>
                            <field name="department_id"/>
                            <field name="country_id"/>
                        </page>
                    </notebook>
                </sheet>

                <!-- –ß–ê–¢–ï–† -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- –î–ï–†–ï–í–û –ë–Æ–î–ñ–ï–¢–Ü–í –ó –ì–†–£–ü–£–í–ê–ù–ù–Ø–ú –ü–û –¶–ë–û -->
    <record id="view_budget_plan_hierarchy_tree" model="ir.ui.view">
        <field name="name">budget.plan.hierarchy.tree</field>
        <field name="model">budget.plan</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="–°—Ç—Ä—É–∫—Ç—É—Ä–∞ –±—é–¥–∂–µ—Ç—ñ–≤"
                  default_order="period_id desc, cbo_id, budget_type_id">

                <!-- –û–°–ù–û–í–ù–Ü –ü–û–õ–Ø –ë–Æ–î–ñ–ï–¢–£ -->
                <field name="name" string="–ù–∞–∑–≤–∞ –±—é–¥–∂–µ—Ç—É"/>
                <field name="period_id" string="–ü–µ—Ä—ñ–æ–¥"/>
                <field name="budget_type_id" string="–¢–∏–ø"/>
                <field name="cbo_id" string="–¶–ë–û"/>
                <field name="budget_level" string="–†—ñ–≤–µ–Ω—å"/>
