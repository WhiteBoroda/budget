                  decoration-bf="cbo_type == 'holding'"
                  decoration-info="cbo_type == 'enterprise'"
                  default_order="sequence, name">

                <!-- –û–°–ù–û–í–ù–Ü –ü–û–õ–Ø -->
                <field name="sequence" invisible="1"/>
                <field name="name" string="–ù–∞–∑–≤–∞ –¶–ë–û"/>
                <field name="code" string="–ö–æ–¥"/>
                <field name="cbo_type" string="–¢–∏–ø" widget="selection"/>
                <field name="budget_level" string="–†—ñ–≤–µ–Ω—å –±—é–¥–∂–µ—Ç—É–≤–∞–Ω–Ω—è" widget="selection"/>
                <field name="responsible_user_id" string="–í—ñ–¥–ø–æ–≤—ñ–¥–∞–ª—å–Ω–∏–π" widget="many2one_avatar_user"/>
