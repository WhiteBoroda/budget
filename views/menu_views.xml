              name="📁 Імпорт/Експорт"
              parent="menu_budget_planning"
              sequence="35"/>

    <!-- Імпорт -->
    <menuitem id="menu_budget_import_section"
              name="📥 Імпорт"
              parent="menu_budget_import_export"
              sequence="10"/>

    <menuitem id="menu_budget_import_excel"
              name="Імпорт з Excel"
              parent="menu_budget_import_section"
              action="action_budget_import_wizard"
              sequence="10"/>

    <menuitem id="menu_bdr_import_categories"
              name="Імпорт категорій БДР"
              parent="menu_budget_import_section"
              action="action_bdr_import_categories_only"
              sequence="15"/>

    <menuitem id="menu_bdr_import_with_categories"
              name="Імпорт БДР з категоріями"
              parent="menu_budget_import_section"
              action="action_bdr_import_with_categories"
              sequence="20"/>

    <!-- Експорт -->
    <menuitem id="menu_budget_export_section"
              name="📤 Експорт"
              parent="menu_budget_import_export"
              sequence="20"/>

    <menuitem id="menu_bdr_export_with_categories"
              name="Експорт БДР з категоріями"
              parent="menu_budget_export_section"
              action="action_bdr_export_with_categories"
              sequence="10"/>

    <menuitem id="menu_budget_export_template"
              name="Завантажити шаблони"
              parent="menu_budget_export_section"
              sequence="20"/>

    <!-- ========== ДОДАТКОВІ ACTIONS ДЛЯ MEНЮ ========== -->

    <!-- Action для команд з бюджетуванням -->
    <record id="action_crm_teams_with_budget" model="ir.actions.act_window">
        <field name="name">Команди продажів</field>
        <field name="res_model">crm.team</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Налаштуйте команди продажів для бюджетування!
            </p>
            <p>
                Інтеграція команд продажів з бюджетуванням дозволяє:
                <ul>
                    <li>Прив'язувати команди до ЦБО</li>
                    <li>Створювати прогнози продажів</li>
                    <li>Автоматизувати планування доходів</li>
                    <li>Контролювати виконання планів</li>
                </ul>
            </p>
        </field>
    </record>

    <!-- Dashboard для команд з прогнозами -->
    <record id="action_crm_teams_dashboard" model="ir.actions.act_window">
        <field name="name">Дашборд команд продажів</field>
        <field name="res_model">crm.team</field>
        <field name="view_mode">kanban</field>
        <field name="domain">[('forecast_count', '>', 0)]</field>
        <field name="context">{
            'search_default_active': 1,
            'kanban_default_group_by': 'responsibility_center_id'
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Команди з прогнозами продажів
            </p>
            <p>
                Тут відображаються команди, які мають активні прогнози продажів.
            </p>
        </field>
    </record>

</odoo>