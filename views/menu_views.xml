              name="❓ Довідка"
              parent="menu_budget_root"
              sequence="99"/>

    <menuitem id="menu_budget_documentation"
              name="📖 Документація"
              parent="menu_budget_help"
              action="action_budget_help"
              sequence="10"/>

    <!-- ========== ІМПОРТ/ЕКСПОРТ ========== -->
