<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- views/sales_plan_views.xml -->

    <!-- Tree view для планів продажів -->
    <record id="view_sales_plan_tree" model="ir.ui.view">
        <field name="name">budget.sales.plan.tree</field>
        <field name="model">budget.sales.plan</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='approved'"
                  decoration-warning="state=='coordination'"
                  decoration-info="state=='draft'">
                <field name="display_name"/>
                <field name="period_id"/>
                <field name="company_id"/>
                <field name="total_planned_amount"/>
                <field name="growth_rate"/>
                <field name="state"/>
                <field name="responsible_user_id"/>
            </tree>
        </field>
    </record>

    <!-- Form view для планів продажів -->
    <record id="view_sales_plan_form" model="ir.ui.view">
        <field name="name">budget.sales.plan.form</field>
        <field name="model">budget.sales.plan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start_analysis"
                            string="Почати аналіз"
                            type="object"
                            class="btn-primary"
                            states="draft"/>
                    <button name="action_create_project"
                            string="Створити проект"
                            type="object"
                            class="btn-primary"
                            states="analysis"/>
                    <button name="action_send_for_coordination"
                            string="На узгодження"
                            type="object"
                            class="btn-primary"
                            states="project"/>
                    <button name="action_approve"
                            string="Затвердити"
                            type="object"
                            class="btn-success"
                            states="coordination"/>
                    <button name="action_revise"
                            string="На доопрацювання"
                            type="object"
                            class="btn-warning"
                            states="coordination"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,analysis,project,coordination,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="period_id" options="{'no_create': True}"/>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="responsible_user_id"/>
                        </group>
                        <group>
                            <field name="total_planned_amount"/>
                            <field name="total_planned_qty"/>
                            <field name="previous_period_sales"/>
                            <field name="growth_rate"/>
                        </group>
                    </group>
                    <group string="Затвердження" states="approved">
                        <group>
                            <field name="approved_by_id" readonly="1"/>
                            <field name="approval_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Позиції плану продажів">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_category_id"/>
                                    <field name="sales_channel"/>
                                    <field name="region"/>
                                    <field name="planned_qty"/>
                                    <field name="planned_price"/>
                                    <field name="discount_percent"/>
                                    <field name="planned_amount"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Примітки">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view для планів продажів -->
    <record id="view_sales_plan_search" model="ir.ui.view">
        <field name="name">budget.sales.plan.search</field>
        <field name="model">budget.sales.plan</field>
        <field name="arch" type="xml">
            <search>
                <field name="display_name" string="Пошук"/>
                <field name="period_id"/>
                <field name="company_id"/>
                <field name="responsible_user_id"/>

                <separator/>
                <filter string="Мої плани"
                        name="my_plans"
                        domain="[('responsible_user_id', '=', uid)]"/>
                <filter string="Затверджені"
                        name="approved"
                        domain="[('state', '=', 'approved')]"/>
                <filter string="На узгодженні"
                        name="coordination"
                        domain="[('state', '=', 'coordination')]"/>

                <group expand="0" string="Групувати за">
                    <filter string="Статус" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Період" name="group_period" context="{'group_by': 'period_id'}"/>
                    <filter string="Підприємство" name="group_company" context="{'group_by': 'company_id'}"/>
                    <filter string="Відповідальний" name="group_responsible" context="{'group_by': 'responsible_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action для планів продажів -->
    <record id="action_sales_plan" model="ir.actions.act_window">
        <field name="name">Плани продажів</field>
        <field name="res_model">budget.sales.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Створіть ваш перший план продажів!
            </p>
            <p>
                План продажів є основою для формування всіх бюджетів підприємства.
            </p>
        </field>
    </record>

    <!-- Menu item для планів продажів -->
    <menuitem id="menu_sales_plan"
              name="Плани продажів"
              parent="menu_budget_planning"
              action="action_sales_plan"
              sequence="10"/>

</odoo>